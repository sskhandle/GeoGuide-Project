<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e3f2fd"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="Radius displayed here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewProgress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:text="Action displayed here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewAction"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/seekBar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <SeekBar android:id="@+id/seekBar1"
        android:max="10000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewProgress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_radius"
        android:id="@+id/save_radius_btn"
        android:layout_below="@+id/textViewAction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/save_radius_btn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
